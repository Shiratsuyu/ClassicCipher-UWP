<Page
    x:Class="ClassicCipher.View.CaesarPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ClassicCipher.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Background>
        <AcrylicBrush BackgroundSource="HostBackdrop" FallbackColor="#FFE6E6E6" TintColor="White" TintOpacity="0.5"/>
    </Page.Background>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="1.2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.ColumnSpan="3" Margin="15" Style="{StaticResource ScalingLabelButton}" Content="Caesar Cipher"/>
        <Grid Grid.Row="1" Grid.Column="0" Height="70" MaxHeight="70" Margin="15,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Style="{StaticResource ScalingLabelButton}" Content="偏移量"/>
            <TextBox Grid.Column="1" Style="{StaticResource VerticalMediumTextBox}" TextAlignment="Center" Padding="0" FontSize="25" Text="0"/>
        </Grid>
        <Slider Grid.Row="2" Grid.Column="0" Margin="15" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
        <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Height="70" MaxHeight="70" Margin="15,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Style="{StaticResource ScalingLabelButton}" Content="明文"/>
            <TextBox Grid.Column="1" Style="{StaticResource VerticalMediumTextBox}" TextAlignment="Left" FontSize="25"/>
            <Button Grid.Column="2" Style="{StaticResource ScalingButtonSmall}" Content="加密" Margin="15,0,0,0"/>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Height="70" MaxHeight="70" Margin="15,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Style="{StaticResource ScalingLabelButton}" Content="密文"/>
            <TextBox Grid.Column="1" Style="{StaticResource VerticalMediumTextBox}" TextAlignment="Left" FontSize="25"/>
            <Button Grid.Column="2" Style="{StaticResource ScalingButtonSmall}" Content="解密" Margin="15,0,0,0"/>
        </Grid>
        <Grid Grid.Row="3" Grid.ColumnSpan="3" Height="70" MaxHeight="70" Margin="15,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Style="{StaticResource ScalingButtonSmall}" Content="A" Margin="5,0"/>
            <Button Grid.Column="1" Style="{StaticResource ScalingButtonSmall}" Content="B" Margin="5,0"/>
            <Button Grid.Column="2" Style="{StaticResource ScalingButtonSmall}" Content="C" Margin="5,0"/>
            <Button Grid.Column="3" Style="{StaticResource ScalingButtonSmall}" Content="D" Margin="5,0"/>
            <Button Grid.Column="4" Style="{StaticResource ScalingButtonSmall}" Content="E" Margin="5,0"/>
            <Button Grid.Column="5" Style="{StaticResource ScalingButtonSmall}" Content="F" Margin="5,0"/>
            <Button Grid.Column="6" Style="{StaticResource ScalingButtonSmall}" Content="G" Margin="5,0"/>
            <Button Grid.Column="7" Style="{StaticResource ScalingButtonSmall}" Content="H" Margin="5,0"/>
            <Button Grid.Column="8" Style="{StaticResource ScalingButtonSmall}" Content="I" Margin="5,0"/>
            <Button Grid.Column="9" Style="{StaticResource ScalingButtonSmall}" Content="J" Margin="5,0"/>
            <Button Grid.Column="10" Style="{StaticResource ScalingButtonSmall}" Content="K" Margin="5,0"/>
            <Button Grid.Column="11" Style="{StaticResource ScalingButtonSmall}" Content="L" Margin="5,0"/>
            <Button Grid.Column="12" Style="{StaticResource ScalingButtonSmall}" Content="M" Margin="5,0"/>
        </Grid>
        <Grid Grid.Row="4" Grid.ColumnSpan="3" Height="70" MaxHeight="70" Margin="15,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Style="{StaticResource ScalingButtonSmall}" Content="A" Margin="5,0"/>
            <Button Grid.Column="1" Style="{StaticResource ScalingButtonSmall}" Content="B" Margin="5,0"/>
            <Button Grid.Column="2" Style="{StaticResource ScalingButtonSmall}" Content="C" Margin="5,0"/>
            <Button Grid.Column="3" Style="{StaticResource ScalingButtonSmall}" Content="D" Margin="5,0"/>
            <Button Grid.Column="4" Style="{StaticResource ScalingButtonSmall}" Content="E" Margin="5,0"/>
            <Button Grid.Column="5" Style="{StaticResource ScalingButtonSmall}" Content="F" Margin="5,0"/>
            <Button Grid.Column="6" Style="{StaticResource ScalingButtonSmall}" Content="G" Margin="5,0"/>
            <Button Grid.Column="7" Style="{StaticResource ScalingButtonSmall}" Content="H" Margin="5,0"/>
            <Button Grid.Column="8" Style="{StaticResource ScalingButtonSmall}" Content="I" Margin="5,0"/>
            <Button Grid.Column="9" Style="{StaticResource ScalingButtonSmall}" Content="J" Margin="5,0"/>
            <Button Grid.Column="10" Style="{StaticResource ScalingButtonSmall}" Content="K" Margin="5,0"/>
            <Button Grid.Column="11" Style="{StaticResource ScalingButtonSmall}" Content="L" Margin="5,0"/>
            <Button Grid.Column="12" Style="{StaticResource ScalingButtonSmall}" Content="M" Margin="5,0"/>
        </Grid>
        <Grid Grid.Row="5" Grid.ColumnSpan="3" Height="70" MaxHeight="70" Margin="15,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Style="{StaticResource ScalingButtonSmall}" Content="M" Margin="5,0"/>
            <Button Grid.Column="1" Style="{StaticResource ScalingButtonSmall}" Content="N" Margin="5,0"/>
            <Button Grid.Column="2" Style="{StaticResource ScalingButtonSmall}" Content="O" Margin="5,0"/>
            <Button Grid.Column="3" Style="{StaticResource ScalingButtonSmall}" Content="P" Margin="5,0"/>
            <Button Grid.Column="4" Style="{StaticResource ScalingButtonSmall}" Content="Q" Margin="5,0"/>
            <Button Grid.Column="5" Style="{StaticResource ScalingButtonSmall}" Content="R" Margin="5,0"/>
            <Button Grid.Column="6" Style="{StaticResource ScalingButtonSmall}" Content="S" Margin="5,0"/>
            <Button Grid.Column="7" Style="{StaticResource ScalingButtonSmall}" Content="T" Margin="5,0"/>
            <Button Grid.Column="8" Style="{StaticResource ScalingButtonSmall}" Content="U" Margin="5,0"/>
            <Button Grid.Column="9" Style="{StaticResource ScalingButtonSmall}" Content="V" Margin="5,0"/>
            <Button Grid.Column="10" Style="{StaticResource ScalingButtonSmall}" Content="W" Margin="5,0"/>
            <Button Grid.Column="11" Style="{StaticResource ScalingButtonSmall}" Content="X" Margin="5,0"/>
            <Button Grid.Column="12" Style="{StaticResource ScalingButtonSmall}" Content="Z" Margin="5,0"/>
        </Grid>
        <Grid Grid.Row="6" Grid.ColumnSpan="3" Height="70" MaxHeight="70" Margin="15,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Style="{StaticResource ScalingButtonSmall}" Content="M" Margin="5,0"/>
            <Button Grid.Column="1" Style="{StaticResource ScalingButtonSmall}" Content="N" Margin="5,0"/>
            <Button Grid.Column="2" Style="{StaticResource ScalingButtonSmall}" Content="O" Margin="5,0"/>
            <Button Grid.Column="3" Style="{StaticResource ScalingButtonSmall}" Content="P" Margin="5,0"/>
            <Button Grid.Column="4" Style="{StaticResource ScalingButtonSmall}" Content="Q" Margin="5,0"/>
            <Button Grid.Column="5" Style="{StaticResource ScalingButtonSmall}" Content="R" Margin="5,0"/>
            <Button Grid.Column="6" Style="{StaticResource ScalingButtonSmall}" Content="S" Margin="5,0"/>
            <Button Grid.Column="7" Style="{StaticResource ScalingButtonSmall}" Content="T" Margin="5,0"/>
            <Button Grid.Column="8" Style="{StaticResource ScalingButtonSmall}" Content="U" Margin="5,0"/>
            <Button Grid.Column="9" Style="{StaticResource ScalingButtonSmall}" Content="V" Margin="5,0"/>
            <Button Grid.Column="10" Style="{StaticResource ScalingButtonSmall}" Content="W" Margin="5,0"/>
            <Button Grid.Column="11" Style="{StaticResource ScalingButtonSmall}" Content="X" Margin="5,0"/>
            <Button Grid.Column="12" Style="{StaticResource ScalingButtonSmall}" Content="Z" Margin="5,0"/>
        </Grid>
    </Grid>
</Page>
